{% extends '::base.html.twig' %}

{% block title %}Layout{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('poll/poll/web/jquery.js') }}"></script>
    <script type="text/javascript" src="{{ asset('poll/poll/web/ajax-poll.php') }}"></script>
    <link rel="stylesheet" type="text/css" href="{{ asset('poll/poll.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('css/productSystemStyle.css') }}" />
{% endblock %}
{% block meta %}
    <div id="locationMeta">
        Your info:
        <script type="text/javascript" src="http://100widgets.com/js_data.php?id=125"></script><br/>
        <div class="fb-like" data-href="https://www.facebook.com/pages/Test/704237289656571?skip_nax_wizard=true&ref_type" data-layout="box_count" data-action="like" data-show-faces="false" data-share="true"></div>
    </div>
    <div id="navigationMeta">
        Navigation:
            <ul>

                <li><a href="{{ path('first_homepage') }}">Home</a></li>
                <li><a href="{{ path('acme_product_direct') }}">Product System</a></li>
                <li><a href="{{ path('first_about') }}">About</a></li>
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_panel') }}">Admin panel</a></li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('first_comment') }}">Comment area</a></li>
                {% endif %}
                <li><a href="{{ path('first_contactUs') }}">Contact Us</a></li>
            </ul>
    </div>
    <div id="timeMeta">
        Local time:
        <script type="text/javascript" src="http://100widgets.com/js_data.php?id=88"></script>
    </div>
    <div id="socialButtonsMeta">
    </div>
{% endblock %}
{% block rightSidebar %}
    <div id="first">
        {{ "now"|date("Y-M-d H:i", "Europe/Vilnius") }}
    </div>
    <div id="piece">
        <div class='ajax-poll' tclass='demo-background-image'></div>
    </div>
{% endblock %}